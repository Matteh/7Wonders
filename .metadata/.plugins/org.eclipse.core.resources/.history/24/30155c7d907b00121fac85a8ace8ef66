package Structures;

import Resources.Resources;
import java.util.ArrayList;

public class ArcheryRange extends Structure {

	
	public static final int ArcheryRangeID = 0x14;
	
	public ArcheryRange()
	{
		super(new Resources(1, 0, 2, 0, 0, 0, 0, 0), ArcheryRangeID, "Archery Range", RED_CARD, 2);
	}
	
	//if the id 
	public boolean CanBuildForFree(ArrayList<Structure> cards)
	{
		boolean retValue = false;
		for ( Structure s: cards )
		{
			if ( s.GetID() == Workshop.WorkshopID )
			{
				retValue = true;
				break;
			}
		}
		return retValue;
	}
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
